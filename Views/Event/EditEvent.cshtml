@model Event;
<div class="header">
    <h2>Edit your event</h2>
    <div class="nav">
        <p><a href="/dashboard">Dashboard</a> | <a href="/logout">Log Out</a></p> 
        
    </div>
</div>
<form asp-action="ProcessEditEvent" asp-controller="Event" method="post">
    <div class="form-group">
        <p><span asp-validation-for="Title"></span></p>
        <label asp-for="Title"></label>
        <input asp-for="Title" />
    </div>
    <div class="form-group">
        <p><span asp-validation-for="Date"></span></p>
        <label asp-for="Date"></label>
        <input asp-for="Date" />
    </div>
    <div class="form-group">
        <p><span asp-validation-for="Description"></span></p>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
    </div>
    <button>Submit</button>
</form>